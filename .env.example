# Amazon SES Configuration
# Get these credentials from AWS IAM Console
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Email addresses (must be verified in AWS SES)
SES_FROM_EMAIL=noreply@bookb.io
SES_TO_EMAIL=sales@bookb.io

# Google Analytics (Required for traffic monitoring)
# Get from: https://analytics.google.com/ → Admin → Data Streams
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (Optional - for Facebook Pixel, LinkedIn tracking, etc.)
# Get from: https://tagmanager.google.com/
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://bookb.io
